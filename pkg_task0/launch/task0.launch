<launch>
    <rosparam file="$(find pkg_task0)/config/config_background.yaml"></rosparam>

    <node name="turtlesim_node" pkg="turtlesim" type="turtlesim_node" output="screen">
    </node>
    <node name="node_turtle_revolve" pkg="pkg_task0" type="node_turtle_circle.py" 
        output="screen"/>

    <!-- ROS Bag file to record events -->
    <arg name="record" default="false"/>
    <arg name="duration" default="20"/>
    <arg name="rec_name" default="turtle_record.bag"/>

    <group if="$(arg record)">
        <node name="rosbag_record_turtle" pkg="rosbag" type="record"
            args="record -O $(find pkg_task0)/bag_files/$(arg rec_name) 
              --duration=$(arg duration) --chunksize=10 /turtle1/cmd_vel /turtle1/pose" 
            output="screen"/>
     </group>
</launch>